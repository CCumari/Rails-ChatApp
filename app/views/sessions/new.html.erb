<div class="ui middle aligned center aligned grid" style="height: 100vh;">
  <div class="column" style="max-width: 450px;">
    <h2 class="ui teal image header">
      <i class="chat icon"></i>
      <div class="content">
        Log-in to your account
      </div>
    </h2>
    
    <%= form_with scope: :session, url: login_path, local: true, class: "ui large form" do |f| %>
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.text_field :username, placeholder: "Username" %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password, placeholder: "Password" %>
          </div>
        </div>
        <%= f.submit "Login", class: "ui fluid large teal submit button" %>
      </div>
    <% end %>

    <div class="ui message">
      New to us? Contact admin to create account
    </div>
  </div>
</div>